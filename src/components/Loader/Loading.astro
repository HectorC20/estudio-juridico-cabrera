---
export let isLoading = true;
---

<div class={`loading-screen ${isLoading ? '' : 'hidden'}`}>
    <div class="content-wrapper">
        <h1 class="title__loading">Estudio Jurídico Cabrera</h1>
        <div class="image-container">
            <img
                    class="content__image"
                    src="https://res.cloudinary.com/dixzojb4s/image/upload/v1728314313/treintaanios_xm6zw9.png"
                    alt="Logo 30 años"
            />
        </div>
    </div>
</div>

<style>
    .loading-screen {
        position: fixed;
        inset: 0;
        display: flex;
        align-items: center;
        justify-content: center;
        background: linear-gradient(150deg, hsla(197, 35%, 49%, 0.8) 0%, hsla(197, 55%, 54%, 0.6) 100%);
        z-index: 1000;
        transition: opacity 0.5s ease;
    }
    .loading-screen.hidden {
        opacity: 0;
        pointer-events: none;
    }

    .content-wrapper {
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        text-align: center;
        z-index: 10;
    }

    .title__loading {
        font-family: "Archivo Black", sans-serif;
        text-transform: uppercase;
        color: #fff;
        position: absolute;
        top: 50%;
        left: 50%;
        transform: translate(-50%, -50%);
        text-align: center;
        text-shadow: 2px 2px 4px rgba(8, 14, 23, 0.2);
        z-index: 10;
        @apply text-5xl

    }

    .image-container {
        margin-top: 1rem;
        padding: 2em;
        background: linear-gradient(150deg, hsla(197, 35%, 49%, 0.8) 0%, hsla(197, 55%, 54%, 0.6) 100%);
        border-radius: 1.5rem;
        display: inline-block;
        @apply w-full
    }

    .content__image {
        display: block;
        max-width: 100%;
        max-height: 500px;
        object-fit: contain;
        border-radius: inherit;
    }

    .loader {
        margin: 1rem auto;
        border: 4px solid transparent;
        border-top-color: #3498db;
        border-radius: 50%;
    }
</style>
